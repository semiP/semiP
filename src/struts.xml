<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="cmc" extends="struts-default">
		<!-- 공지사항 액션. -->
		<!-- faq까지 같은 패키지 안에 넣고 액션명만 따로 주면 될거 같음 -->
		<action name="noticeList" class="cmc.noticeList">
			<result>/cmc/noticeList.jsp</result>
		</action>
		<!-- 자주묻는질문 액션 -->
		<action name="faqList" class="cmc.faqList">
			<result>/cmc/faqList.jsp</result>
		</action>
	</package>
	<!-- Login-->
	<package name="login" namespace="/" extends="struts-default, tiles-default">
		<action name="login" class="member.loginAction">
			<result name="success" type="tiles" >main</result> 
			<result name="login">/member/loginForm.jsp</result> 
	 		<result name="error">/common/loginError.jsp</result>
		</action>
		<action name="logout" class="member.loginAction" method="logout"> 
	 		<result type="redirect-action">
				<param name="actionName">main</param>
			</result> 
		</action>
	</package>
	
	<include file="/config/member.xml" />
</struts>