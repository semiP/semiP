<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
    
<struts>

<!-- 로그인관련 -->
	<package name="member" namespace="/" extends="struts-default, tiles-default">
		<action name="member">
			<result name="success" type="tiles">member</result>
		</action>
		<action name="memberinfo">
			<result name="success" type="tiles"></result>
		</action>
		
		<!-- 아이디 중복확인 -->
		<action name="memberIdChkAction" class="member.memberIdChkAction">
			<result>/member/idChk.jsp</result>
		</action>
		<!-- (수정)아이디/비밀번호 찾기 -->
		<action name="loginfind" class="member.IdPassInquire">
			<result name="success" type="tiles">idPassInquire</result>
		</action>
		<!-- 회원탈퇴 -->
		<action name="memberwith">
			<result name="success" type="tiles">memberwith</result>
		</action>
		<!-- 탈퇴  -->
		<action name="DeleteAction" class="member.DeleteAction">
			<result>/member/DeleteResult.jsp</result>
		</action>
		<!-- 회원정보 수정 -->
		<action name="memberModifyAc" class="member.ModifyAction">
			<result type="redirect-action">
				<param name="actionName">main</param>
			</result>
			<result name="login" type="tiles">loginConfirm</result>
		</action>
		
		
		<!-- 
		비밀번호 변경
		<action name="memberpssch" >
			<result name="success" type="tiles">memberpssch</result>
		</action>
		-->
	</package>
</struts>