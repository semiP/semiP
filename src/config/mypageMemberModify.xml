<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
	
<struts>
	<!-- 마이페이지-회원정보수정 -->
	<package name="mypage.memberModify" extends="struts-default">
		<action name="InfoModifyForm" class="mypage.memberModify.InfoModifyAction" method="form">
			<result name="success" type="tiles">profile</result>
			<result name="error">/myPage/pwError.jsp</result>
		</action>
		
		<action name="modifyPassForm" class="mypage.memberModify.InfoModifyAction" method="checkPW">
			<result type="tiles">profile</result>
		</action>
		
		<action name="InfoModifyPro" class="mypage.memberModify.InfoModifyAction" method="execute">
			<result name="login" type="redirect-action">
				<param name="actionName">loginForm</param>
			</result>
			<result name="success" type="redirect-action">
				<param name="actionName">InfoView</param>
			</result>
		</action>
		
		<action name="InfoView" class="mypage.memberModify.InfoViewAction" method="execute">
			<result name="login" type="redirect-action">
				<param name="actionName">loginForm</param>
			</result>
			<result type="tiles">profile</result>
		</action>
	</package>
</struts>